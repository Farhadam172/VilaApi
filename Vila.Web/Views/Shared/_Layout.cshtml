                                {
                                     <li><a asp-controller="Admin" asp-action="AllVilas" class="nav-link">ادمین</a></li>
                                }
                                @if (User.Identity.IsAuthenticated)
                                {
                                    <li><a asp-controller="Auth" asp-action="Logout" class="nav-link">خروج از سایت</a></li>
                                }
                                else
                                {
                                    <li><a asp-controller="Auth" asp-action="Login" class="nav-link">ورود به سایت</a></li>
                            <li><a  asp-controller="Auth" asp-action="Register" class="nav-link">ثبت نام</a></li>
                                }
                                
                                   
                        </ul>
                    </nav>
                </div>


                <div class="col-6 d-inline-block d-xl-none ml-md-0 py-3" style="position: relative; top: 3px;"><a
                        href="#" class="site-menu-toggle js-menu-toggle text-black float-right"><span
                        class="icon-menu h3"></span></a></div>

            </div>
        </div>

    </header>

    @RenderBody()



</div> <!-- .site-wrap -->

